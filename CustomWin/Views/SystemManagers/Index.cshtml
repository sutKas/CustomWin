@model IEnumerable<SystemManager>
@{
    ViewData["Title"] = "List of Admin";
}


<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Profile)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Profile" style="max-width:100px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        
                        <td class="align-middle">
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Show Detail</i></a> |
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square ">Edit</i></a> |
                            <a class="btn btn-outline-danger "><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>